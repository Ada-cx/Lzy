<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="free.lzy.dao.BookDao">

	<insert id="addBook" parameterType="free.lzy.entity.dto.Book">
		INSERT INTO book (
			id, name, author, price
		) VALUES (
			#{id}, #{name}, #{author}, #{price}
		)
	</insert>

	<select id="queryBook" parameterType="int" resultType="free.lzy.entity.dto.Book">
		SELECT * 
		FROM book 
		WHERE id= #{id}
	</select>
</mapper> 