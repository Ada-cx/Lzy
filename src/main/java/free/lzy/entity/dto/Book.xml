<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="free.lzy.dao.BookDao">

	<insert id="add" parameterType="free.lzy.entity.dto.Book">
		INSERT INTO book (
			id, name, author, price
		) VALUES (
			#{id}, #{name}, #{author}, #{price}
		)
	</insert>

	<delete id="delete" parameterType="int">
		DELETE 
		FROM book 
		WHERE id= #{id}
	</delete>
	
	<update id="update" parameterType="free.lzy.entity.dto.Book">
		UPDATE book
		<set>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="author != null">
				author = #{author},
			</if>
			<if test="price != null">
				price = #{price},
			</if>
		</set>
		WHERE id= #{id}
	</update>

	<select id="query" parameterType="int" resultType="free.lzy.entity.dto.Book">
		SELECT * 
		FROM book 
		WHERE id= #{id}
	</select>

	<select id="queryAll" resultType="java.util.List">
		SELECT * 
		FROM book 
	</select>
</mapper> 